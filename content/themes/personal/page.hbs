{{!< default}}
<div id="spacer"></div>
<div id="nav-spacer"></div> 
<main>
    <article class="{{post_class}}">
        {{#post}}
        <div class="post-inner">
            {{#if image}}
                <img src="{{image}}" class="cover-image"/>
            {{/if}}
            <h1 class="title">{{{title}}}</h1>
            <span class="post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{tags prefix="in " separator=" | "}}</span>
            <div>
                {{content}}
            </div>
        </div>
        {{/post}}
    </article>
</main>